<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kretek.android.warungq">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DataBarang"
            android:label="@string/judul_activity_data"
            android:parentActivityName=".MainActivity"
            android:launchMode="singleTop"/>
        <meta-data android:name="android.app.default_searchable"
            android:resource="@xml/searchable"/>
        <activity
            android:name=".LaporanKeuangan"
            android:label="@string/judul_activity_laporan"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TambahDataBarang"
            android:label="@string/judul_tambah_data"
            android:parentActivityName=".DataBarang" />
        <activity
            android:name=".DetailDataBarang"
            android:label="@string/judul_lihat_data"
            android:parentActivityName=".DataBarang" />
        <activity
            android:name=".UpdateDataBarang"
            android:label="@string/judul_update_data"
            android:parentActivityName=".DataBarang" />
        <activity
            android:name=".TambahLaporanKeuangan"
            android:label="@string/judul_tambah_laporan"
            android:parentActivityName=".LaporanKeuangan" />
        <activity
            android:name=".DetailLaporanKeuangan"
            android:label="@string/judul_lihat_laporan"
            android:parentActivityName=".LaporanKeuangan" />
        <activity android:name=".UpdateLaporanKeuangan"
            android:label="@string/judul_update_laporan"
            android:parentActivityName=".LaporanKeuangan"/>
    </application>

</manifest>